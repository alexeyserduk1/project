<h1>Listing bukets</h1>

<table class='table table-striped'>
  <tr>
    <th>flower</th>
    <th>quantity</th>
    <th>prise</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bukets.each do |buket| %>
  <tr>
    <td><%= buket.flower %></td>
    <td><%= buket.quantity %></td>
    <td><%= buket.prise %></td>
    <td><%= link_to 'Show', buket %></td>
    <td><%= link_to 'Edit', edit_buket_path(buket) %></td>
    <td><%= link_to 'Destroy', buket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Total', "#", :id => buket.id, :class => "cost" %></td>
  </tr>
<% end %>
</table>

<br />

<button type="button" class="btn btn-danger"><%= link_to 'Home', root_path %></button>
<button type="button" class="btn btn-primary btn-lg"><%= link_to 'New Buket', new_buket_path %></button>