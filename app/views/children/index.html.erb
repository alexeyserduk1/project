<h1>Listing children</h1>

<table class='table table-striped'>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Age</th>
    <th>Mother</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @children.each do |child| %>
  <tr>
    <td><%= child.name %></td>
    <td><%= child.surname %></td>
    <td><%= child.age %></td>
    <td><%= child.mother.name %></td>
    <td><%= link_to 'Show', child %></td>
    <td><%= link_to 'Edit', edit_child_path(child) %></td>
    <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<button type="button" class="btn btn-success"><%= link_to 'Home', root_path %></button>
